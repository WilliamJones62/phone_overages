<p id="notice"><%= notice %></p>

<h1>Overages</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Number</th>
      <th>Overage date</th>
      <th>Reason</th>
      <th>Added data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @overages.each do |overage| %>
      <tr>
        <td><%= overage.name %></td>
        <td><%= overage.number %></td>
        <td><%= overage.overage_date %></td>
        <td><%= overage.reason %></td>
        <td><%= overage.added_data %></td>
        <td><%= link_to 'Show', overage %></td>
        <td><%= link_to 'Edit', edit_overage_path(overage) %></td>
        <td><%= link_to 'Destroy', overage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

